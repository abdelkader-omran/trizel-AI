<script>
(function(){
  const supported = ['en','fr','ar','zh'];
  const qsLang = new URLSearchParams(location.search).get('lang');
  const stored = localStorage.getItem('trizel_lang');
  const lang = supported.includes(qsLang) ? qsLang : (supported.includes(stored) ? stored : 'en');

  function setLang(next){
    localStorage.setItem('trizel_lang', next);
    document.documentElement.lang = next === 'zh' ? 'zh' : next;
    // Toggle language blocks
    document.querySelectorAll('[data-lang]').forEach(el=>{
      el.classList.toggle('active', el.getAttribute('data-lang') === next);
    });
    // RTL handling
    const isRTL = next === 'ar';
    document.documentElement.dir = isRTL ? 'rtl' : 'ltr';
    document.querySelectorAll('.rtl').forEach(el=>{
      el.style.direction = isRTL ? 'rtl' : 'ltr';
    });
    // Buttons state
    document.querySelectorAll('button[data-setlang]').forEach(b=>{
      b.setAttribute('aria-pressed', b.getAttribute('data-setlang') === next ? 'true' : 'false');
    });
  }

  document.querySelectorAll('button[data-setlang]').forEach(btn=>{
    btn.addEventListener('click', ()=> setLang(btn.getAttribute('data-setlang')));
  });

  setLang(lang);
})();
</script>
